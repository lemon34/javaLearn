<?xml version="1.0" encoding="UTF-8"?>
<configuration status="info">

	<Properties>
		<Property name="pattern_layout">%d %XMDT %t %-5p (%F:%L) - %m%n</Property>
<!--		<Property name="LOG_HOME">/var/sankuai/logs</Property>-->
	</Properties>

	<appenders>
		<Console name="console" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %t [%p] (%F:%L) - %m%n" />
		</Console>


	</appenders>

	<loggers>

		<root level="info">
			<appender-ref ref="console" />
		</root>
	</loggers>
</configuration>
